{
    "compilerOptions": {
      "module": "esnext",
      "target": "es6",
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "lib": ["dom", "esnext"],
      "moduleResolution": "node",
      "noImplicitAny": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "strictNullChecks": true,
      "resolveJsonModule": true,
      "esModuleInterop": true
    },
    "exclude": ["node_modules"]
}